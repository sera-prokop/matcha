mixin user-nav(data)
    ul.user-nav
        li.user-nav__item
            a.user-nav__link(href="#" aria-label="Избранное")
                != pugHelpers.Icon.call(locals, {iconName: 'heart', className: 'user-nav__svg', iconWidth: '22', iconHeight: '20'})
        li.user-nav__item
            a.user-nav__link(href="#" aria-label="Личный кабинет")
                != pugHelpers.Icon.call(locals, {iconName: 'user', className: 'user-nav__svg', iconWidth: '20', iconHeight: '23'})
        li.user-nav__item.cart
            a.user-nav__link(href="#" aria-label="Корзина")
                != pugHelpers.Icon.call(locals, {iconName: 'shopping-cart', className: 'user-nav__svg', iconWidth: '25', iconHeight: '23'})
                span.cart__num 25

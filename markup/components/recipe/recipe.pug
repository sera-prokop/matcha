mixin recipe(data, title, button)
    section.recipe
        .recipe__wrapper
            if title
                h2.recipe__title.title-h2 Рецепты и статьи
            ul.recipe__list
                each item in data.list
                    li.recipe__item
                        a(href="#").recipe__link-img
                            img.recipe__picture.lazy(data-src=`%=static=%img/assets/recipe/${item.img}` alt="img")
                        a(href="#").recipe__link-text
                            p.recipe__text=item.text
            if button
                .recipe__button
                    a(href="#").recipe__btn.btn.btn__border.btn__border--green Узнать больше

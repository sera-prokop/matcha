                                attrs: {
                                    value: '',
                                }
                            },
                            {
                                title: 'Производитель 4',
                                attrs: {
                                    value: '',
                                }
                            },
                        ]
                    )

            .filter-block__bottom
                button.filter-block__bottom-btn.btn.btn--green Показать
                button.filter-block__bottom-btn.btn.btn__border.btn__border--green Сбросить

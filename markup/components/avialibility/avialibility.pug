mixin avialibility(data, mods)

    -
        var allMods = '';
            if(typeof (mods) !== 'undefined' && mods) {
            var modsList = mods.split(',');
            for (var i = 0; i < modsList.length; i++) {
                allMods = allMods + ' ' + modsList[i].trim();
            }
        }


    .avialibility(class=allMods)
        .avialibility__text.avialibility__text--yes В наличии
        //.avialibility__text.avialibility__text--not Нет в наличии
        //.avialibility__text.avialibility__text--soon Ожидается

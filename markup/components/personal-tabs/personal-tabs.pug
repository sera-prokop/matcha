mixin personal-tabs(data)
    .personal-tabs
        +tabs([
            {
                'id': 'personal',
                'text': 'Персональные данные',
                'isActive': true,
            },
            {
                'id': 'address',
                'text': 'Адреса доставки',
            },
            {
                'id': 'change-password',
                'text': 'Изменить пароль',
            },
        ])
            +tabs-item('personal', true, 'personal-user')
                +personal-reg-form(registration_form, false, true)
            +tabs-item('address', false, 'personal-address')
                +field-radio([
                    {
                        title: 'Домой',
                        mods: '',
                        attrs: {
                            name: 'where',
                            checked: true,
                        }
                    },
                    {
                        title: 'В офис',
                        mods: '',
                        attrs: {
                            name: 'where',
                        }
                    },
                ])
                .personal-tabs__address-form
                    +field-text({
                        title: 'Адрес доставки',
                        helpText: 'Не менее 2-х символов. Обязательно.',
                        attrs: {
                            placeholder: 'Москва, Россия',
                            'data-check-pattern': '^[a-zа-яё]+.+'
                        }
                    })
                    .field-text
                    +field-text({
                        title: 'Офис',
                        helpText: 'Не менее 2-х символов. Обязательно.',
                        mods: 'second',
                        attrs: {
                            placeholder: 'Московская ул',
                            'data-check-pattern': '^[a-zа-яё]+.+'
                        }
                    })
                    +field-text({
                        title: 'Подъезд',
                        helpText: 'Не менее 2-х символов. Обязательно.',
                        mods: 'second',
                        attrs: {
                            placeholder: '3',
                            'data-check-pattern': '^[a-zа-яё]+.+'
                        }
                    })
                    +field-text({
                        title: 'Этаж',
                        helpText: 'Не менее 2-х символов. Обязательно.',
                        mods: 'second',
                        attrs: {
                            placeholder: '5',
                            'data-check-pattern': '^[a-zа-яё]+.+'
                        }
                    })
                    +field-text({
                        title: 'Дополнительный телефон',
                        helpText: 'Обязательно.',
                        attrs: {
                            type: 'tel',
                            placeholder: '+7 (000) 000-00-00',
                            'data-check-pattern': '[\\+]?\\d?[\\s|-]?[(]?\\d{0,3}[)]?[\\s|-]?\\d{3}[\\s|-]?\\d{2}[\\s|-]?\\d{2}'
                        }
                    })
                    .personal-tabs__address-button
                        button.personal-tabs__address-btn.btn.btn--green Сохранить изменения

            +tabs-item('change-password', false, 'personal-password')
                h3 Смените пароль на тот, который вы легко запомните
                p Новый пароль должен содержать не менее 6-ти цифр и латинских букв
                .personal-tabs__password-form
                    +field-text({
                        title: 'Новый пароль',
                        helpText: 'Не менее 6-ти символов.',
                        attrs: {
                            placeholder: '********',
                            require: true,
                            type: 'password',
                            'data-check-pattern': '[0-9a-zA-Z!@#$%^&*]{6,}',
                        }
                    })
                    +field-text({
                        title: 'Новый пароль еще раз',
                        helpText: 'Не менее 6-ти символов.',
                        attrs: {
                            placeholder: '********',
                            require: true,
                            type: 'password',
                            'data-check-pattern': '[0-9a-zA-Z!@#$%^&*]{6,}',
                        }
                    })
                    .personal-tabs__password-button
                        button.personal-tabs__password-btn.btn.btn--green Сохранить изменения


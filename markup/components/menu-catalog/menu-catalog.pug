mixin menu-catalog(data)
    ul.menu-catalog
        +loop-menu-catalog(data.list)
        //-each item in data.list
            li.menu-catalog__item
                != pugHelpers.Icon.call(locals, {iconName: item.svg, className: 'menu-catalog__svg', iconWidth: '21', iconHeight: '21'})
                a(href=item.link)= item.name
    ul.menu-catalog__down.menu-down
        li.menu-down__item
            a(href="actions.html").menu-down__link.menu-down__link--action %Акции
        li.menu-down__item
            a(href="delivery.html").menu-down__link Доставка и оплата
        li.menu-down__item
            a(href="contacts.html").menu-down__link Контакты

mixin loop-menu-catalog(list)
    each item in list
        li.menu-catalog__item
            a.menu-catalog__link(href=item.link)
                != pugHelpers.Icon.call(locals, {iconName: item.svg, className: 'menu-catalog__svg', iconWidth: '21', iconHeight: '21'})
                span.menu-catalog__text= item.name

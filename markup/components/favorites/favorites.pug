mixin favorites(mods, border)

    -
        var allMods = '';
        if(typeof(mods) !== 'undefined' && mods) {
            var modsList = mods.split(',');
            for (var i = 0; i < modsList.length; i++) {
                allMods = allMods + ' ' + modsList[i].trim();
            }
        }
        if(typeof(border) !== 'undefined' && border)
            allMods = allMods + '  favorites--border';

    a.favorites(href="#modal-favorites-add" data-toggle="modal" aria-label="Избранное" class=allMods)
